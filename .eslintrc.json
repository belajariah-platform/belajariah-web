{
    "env": {
        "es6": true,
        "node": true,
        "jest": true,
        "browser": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "react/prop-types": 0,
        "no-console": "off",
        "indent": [
            "error",
            2,
            {
                "ignoredNodes": [
                    "TemplateLiteral"
                ]
            }
        ],
        "template-curly-spacing": [
            "off"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "yoda": [
            "error",
            "never"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "space-before-blocks": [
            "error"
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "never",
                "blocks": "never",
                "switches": "never"
            }
        ],
        "no-unused-vars": "error",
        "no-constant-condition": "off"
    },
    "globals": {
        "React": "writable"
    }
}